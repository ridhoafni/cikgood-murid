<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Margin.Horizontal"
    android:id="@+id/layoutHistoryPemesanan"
    android:layout_marginTop="@dimen/component_extra"
    android:padding="@dimen/component_extra"
    android:clickable="true"
    android:background="@drawable/bg_pressed_center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <Button
      android:id="@+id/btn_status"
      style="@style/AppTheme.ButtonIcon"
      android:layout_width="95dp"
      android:layout_height="30dp"
      android:background="@drawable/bg_btn_accent_primary"
      android:text="Dibatalkan"
      android:textAllCaps="false"
      android:textSize="@dimen/text_tiny"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"></Button>

  <TextView
      android:id="@+id/tv_tgl_pemesanan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="05 Mei 2018"
      android:textColor="@color/colorTextPrimary"
      android:textSize="@dimen/text_normal"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/view6"
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider"
      android:layout_marginTop="8dp"
      android:background="@color/colorTextLightHint"
      app:layout_constraintTop_toBottomOf="@+id/btn_status"
      tools:layout_editor_absoluteX="16dp"></View>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toTopOf="@+id/view6"
      tools:layout_editor_absoluteX="17dp">

    <TextView
        android:fontFamily="@font/googlesans_regular"
        android:id="@+id/tv_nama"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Nama" />

    <TextView
        android:fontFamily="@font/googlesans_medium"
        android:id="@+id/tv_pem_nama"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Ridho afni" />

    <TextView
        android:fontFamily="@font/googlesans_regular"
        android:layout_marginTop="@dimen/component_small"
        android:id="@+id/tv_matpel"
        android:layout_below="@+id/tv_nama"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Mata Pelajaran" />

    <TextView
        android:id="@+id/tv_pem_matpel"
        android:fontFamily="@font/googlesans_medium"
        android:layout_below="@+id/tv_pem_nama"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Bahasa Inggris SMP" />

    <TextView
        android:fontFamily="@font/googlesans_regular"
        android:layout_marginTop="@dimen/component_small"
        android:layout_below="@+id/tv_matpel"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/text_pem_total" />

    <TextView
        android:id="@+id/tv_pem_total"
        android:fontFamily="@font/googlesans_bolditalic"
        android:layout_below="@+id/tv_pem_matpel"
        android:textColor="@color/colorButtonAccent"
        android:textSize="@dimen/text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Rp. 100.000" />
  </RelativeLayout>


</android.support.constraint.ConstraintLayout>