    <LinearLayout
        android:id="@+id/linear_layout"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/thumbnail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="@dimen/padding_10"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                tools:src="@tools:sample/avatars" />


            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/thumbnail"
                android:ellipsize="end"
                android:fontFamily="@font/mmedium"
                android:maxLines="1"
                android:text="nama"
                android:textColor="@color/item_name"
                android:textSize="20dp" />

            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/tv_pendidikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nama"
                android:layout_toRightOf="@id/thumbnail"
                android:fontFamily="@font/mlight"
                android:maxLines="1"
                android:paddingTop="@dimen/padding_10"
                android:text="pendidikan"
                android:textColor="@color/chef"
                android:textSize="18dp" />

            <TableLayout
                android:layout_marginLeft="16dp"
                android:id="@+id/table_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pendidikan"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_toEndOf="@id/thumbnail"
                android:layout_toRightOf="@id/thumbnail">

                <TableRow>

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_pendidikan"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@id/thumbnail"
                        android:layout_toRightOf="@id/thumbnail"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="4.2"
                        android:stepSize=".1" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_toEndOf="@+id/ratingBar"
                        android:layout_toRightOf="@id/ratingBar"
                        android:text="4.2" />
                </TableRow>
            </TableLayout>

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_check_circle_black_24dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/iv_status"
                android:ellipsize="end"
                android:fontFamily="@font/mregular"
                android:maxLines="1"
                android:text="status"
                android:textColor="@color/description"
                android:textSize="@dimen/name" />

            <TextView
                android:id="@+id/tv_biodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="@dimen/padding_10"
                android:ellipsize="end"
                android:fontFamily="@font/mmedium"
                android:maxLines="3"
                android:text="biodata"
                android:textColor="@color/description"
                android:textSize="@dimen/description" />

            <TextView
                android:id="@+id/tv_titile_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_biodata"
                android:layout_marginTop="@dimen/padding_10"
                android:fontFamily="@font/mregular"
                android:text="Harga : "
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_biodata"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_toRightOf="@id/tv_titile_harga"
                android:fontFamily="@font/mlight"
                android:text="Harga"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/price"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_biodata"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_toRightOf="@id/tv_harga"
                android:fontFamily="@font/mregular"
                android:text="/Jam"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/price"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>


    <View
        android:id="@+id/view3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8.5dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_circle_img_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/icon_nopic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

</android.support.constraint.ConstraintLayout>
