<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="250dp"
    android:layout_gravity="center" >
     <RelativeLayout
        android:elevation="2dp"
        android:id="@+id/home_activity_v2"
        android:layout_width="65dp"
        android:layout_height="65dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
        android:background="@drawable/avatar_stroke_bold"
        android:gravity="center" >

        <ImageView
            android:id="@+id/ticket_checkout_img1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/icon_airplane" />
    </RelativeLayout>
    
<RelativeLayout 
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:elevation="1dp"
        android:layout_marginTop="25dp" 
    android:background="@drawable/btn_big_white_primary"
    android:id="@+id/popup_nofunds_bg"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/popup_ticket_tv1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/bluePrimary"
        android:textSize="30sp" />
    
        <TextView
			android:fontFamily="@font/mmedium"
        	android:layout_marginLeft="16dp"
        	android:layout_marginTop="14dp"
	    	android:layout_below="@+id/popup_ticket_tv1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:id="@+id/popup_ticket_tv2"
	        android:textColor="@android:color/holo_red_dark"
	        android:text="Info !"
			android:gravity="center"
	        android:textSize="20sp"/>       
		
            
			<TextView
				android:fontFamily="@font/mregular"
        		android:layout_marginLeft="16dp"
	        	android:id="@+id/popup_ticket_tv3"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textColor="@color/grayPrimary"
		        android:text="Saldo yang anda miliki tidak mencukupi !"
	    		android:layout_below="@+id/popup_ticket_div"
		        android:textSize="16sp"/>

			<View
        	android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"
			android:layout_marginTop="16dp"
		    android:layout_marginBottom="16dp"
		    android:background="@color/divider_bg"
	        android:layout_height="1dp"
	    	android:layout_below="@+id/popup_ticket_tv2"
	        android:id="@+id/popup_ticket_div"
	        android:layout_width="match_parent"/>

    <Button
		android:layout_marginTop="18dp"
        android:id="@+id/btn_tambah_saldo_pop"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
		android:layout_below="@+id/popup_ticket_tv3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_btn_accent_primary"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="ISI SALDO"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
</RelativeLayout>