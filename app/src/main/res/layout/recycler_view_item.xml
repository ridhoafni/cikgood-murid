  <TextView
      android:id="@+id/tv_tgl_pemesanan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:text="05 Mei 2018"
      android:textColor="@color/colorTextPrimary"
      android:textSize="@dimen/text_normal"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <View
      android:id="@+id/view6"
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider"
      android:layout_marginTop="8dp"
      android:background="@color/colorTextLightHint"
      app:layout_constraintTop_toBottomOf="@+id/tv_tgl_pemesanan"
      tools:layout_editor_absoluteX="17dp"></View>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toTopOf="@+id/view6"
      tools:layout_editor_absoluteX="17dp">

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/googlesans_regular"
        android:text="Nama"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_pem_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/googlesans_medium"
        android:text="Ridho afni"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_matpel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nama"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/component_small"
        android:fontFamily="@font/googlesans_regular"
        android:text="Mata Pelajaran"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_pem_matpel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pem_nama"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/googlesans_medium"
        android:text="Bahasa Inggris SMP"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matpel"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/component_small"
        android:fontFamily="@font/googlesans_regular"
        android:text="@string/text_pem_total"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_small" />

    <TextView
        android:id="@+id/tv_pem_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pem_matpel"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/googlesans_bolditalic"
        android:text="Rp. 100.000"
        android:textColor="@color/colorButtonAccent"
        android:textSize="@dimen/text_medium" />
  </RelativeLayout>


</android.support.constraint.ConstraintLayout>