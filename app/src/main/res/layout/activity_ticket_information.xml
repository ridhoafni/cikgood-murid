<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgPrimary" >

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bg_gradient_accent_primary" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ticket_information_tv1"
        android:textColor="@color/white"
        android:text="Pesanan Detail"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_below="@+id/ticket_information_tv1"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_layout_white"
        android:id="@+id/ticket_information_layout" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:layout_height="55dp"
                android:layout_width="55dp"
                android:src="@drawable/ic_ticket_buy"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/ticket_information_tv2"
                    android:textColor="@color/blackPrimary"
                    android:text="Ridho afni"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/ticket_information_tv3"
                    android:textColor="@color/grayPrimary"
                    android:text="Pisa City, Italy"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/ticket_information_tv4"
                    android:textColor="@color/bluePrimary"
                    android:text="2 Tickets"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/divider_bg"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/blackPrimary"
                android:id="@+id/ticket_information_tv5"
                android:text="Buy Date"
                android:textSize="20sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grayPrimary"
                android:layout_marginTop="4dp"
                android:id="@+id/ticket_information_tv6"
                android:text="Monday, 22-03-2019"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/blackPrimary"
                android:text="Buy Time"
                android:id="@+id/ticket_information_tv7"
                android:textSize="20sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grayPrimary"
                android:layout_marginTop="4dp"
                android:text="10AM to 12PM"
                android:id="@+id/ticket_information_tv8"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/blackPrimary"
                android:text="Information"
                android:id="@+id/ticket_information_tv9"
                android:textSize="20sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/grayPrimary"
                android:layout_marginTop="4dp"
                android:id="@+id/ticket_information_tv10"
                android:text="Maskapai : Garuda Indonesia.\nKeberangkatan pesawat : Besok pagi pada 02/04/2019 pukul 08:00AM WIB.\nMasa berlaku Tiket : 08/04/2019"
                android:textSize="13sp"/>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="52dp"
            android:layout_width="222dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_barcode"/>

    </LinearLayout>
    <!--<Button-->
        <!--android:id="@+id/btn_print"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="55dp"-->
        <!--android:layout_below="@+id/ticket_information_layout"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginEnd="24dp"-->
        <!--android:layout_marginTop="24dp"-->
        <!--android:background="@drawable/btn_big_green_primary"-->
        <!--android:text="PRINT TICKET"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="20sp" />-->

    <Button
        android:id="@+id/btn_print"
        android:layout_below="@+id/ticket_information_layout"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:fontFamily="@font/mmedium"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_btn_green_primary"
        android:textColor="@color/white"
        android:text="print pemesanan"/>

    <LinearLayout
        android:id="@+id/ticket_information_l1"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ticket_information_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:background="@drawable/btn_big_white_primary">

        <ImageView android:layout_width="30dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"/>

    </LinearLayout>
</RelativeLayout>
