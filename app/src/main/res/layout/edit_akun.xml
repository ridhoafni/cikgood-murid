<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary" >


    <View
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/bg_gradient_accent_primary"
        android:id="@+id/my_profile_edit_v1" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/my_profile_edit_tv1"
        android:textColor="@color/white"
        android:text="Edit Profile"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/my_profile_edit_tv2"
        android:layout_below="@+id/my_profile_edit_tv1"
        android:textColor="@color/white"
        android:text="Kami menyarankan anda untuk \nmengisikan data yang benar!"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="6dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>


    <ScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profile_edit_tv2"
        android:layout_marginTop="32dp"  >

        <RelativeLayout
            android:id="@+id/my_profile_edit_r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_profile_edit_tv2"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:paddingBottom="20dp"
                android:paddingTop="30dp"
                android:background="@drawable/bg_layout_white"
                android:id="@+id/my_profile_edit_layout" >

                <LinearLayout
                    android:layout_marginTop="100dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="24dp" >

                    <TextView
                        android:id="@+id/my_profile_edit_tv3"
                        android:layout_marginBottom="12dp"
                        android:text="@string/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_nama_lengkap"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp" >

                    <TextView
                        android:id="@+id/my_profile_edit_tv4"
                        android:layout_marginBottom="12dp"
                        android:text="@string/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_email"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/my_profile_edit_tv5"
                        android:layout_marginBottom="12dp"
                        android:text="Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_username"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp" >

                    <TextView
                        android:id="@+id/my_profile_edit_tv6"
                        android:layout_marginBottom="12dp"
                        android:text="@string/no_hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_no_hp"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:text="@string/alamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_alamat_lengkap"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:text="@string/jk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <Spinner
                        android:prompt="@string/jk"
                        android:entries="@array/jk"
                        android:id="@+id/et_jk"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:text="@string/nisn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_nisn"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:text="@string/kelas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_kelas"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_marginBottom="12dp"
                        android:text="@string/nama_sekolah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/grayPrimary"/>

                    <EditText
                        android:id="@+id/et_nama_sekolah"
                        android:lines="1"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_edit"
                        android:textColor="@color/blackPrimary"
                        />

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:background="@drawable/avatar_stroke"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/et_img_profil"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_nopic" />
            </RelativeLayout>

            <Button
                android:id="@+id/my_profile_edit_btn2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_circle_plus"
                android:text="+"
                android:layout_marginTop="85dp"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginLeft="200dp"/>



            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_below="@+id/my_profile_edit_layout"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_btn_accent_primary"
                android:text="SAVE PROFILE"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/my_profile_edit_layout2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_below="@+id/my_profile_edit_layout"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:background="@drawable/btn_big_white_primary">

                <ImageView android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"/>

            </LinearLayout>


            <ImageView
                android:layout_below="@+id/my_profile_edit_layout2"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:background="#00000000"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
