<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightgray">

        <com.smarteist.autoimageslider.SliderLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:outlineAmbientShadowColor="@color/colorAccent"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/imageSlider"/>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tingkatan"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/spinnerTingkatan"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/bg_register"
                android:hint="@string/tingkatan"
                android:layout_height="wrap_content"
                android:inputType="text" />


        </android.support.v7.widget.CardView>


        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/matpel"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/spinnerMatpel"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/bg_register"
                android:hint="@string/tingkatan"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kabupaten"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/spinnerKabupaten"
                android:layout_width="match_parent"
                android:spinnerMode="dropdown"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/bg_register"
                android:hint="@string/tingkatan"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_cari"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:text="@string/cariguru"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>
`

</android.support.v4.widget.NestedScrollView>