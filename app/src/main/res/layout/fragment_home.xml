<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/component_medium"
    android:layout_marginBottom="60dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="219dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_src"
                android:hint="Cari Guru di Cikgood"
                android:paddingLeft="35dp"
                android:textColor="@color/blakPrimary"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_search_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_search" />

            <ImageView
                android:id="@+id/img_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_notifications_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_email_black_24dp"
                app:layout_constraintEnd_toStartOf="@+id/img_notification"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_favorite_black_24dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_msg"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_search">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/icon_nopic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/component_tiny"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            style="@style/CodeFontHint"
                            android:text="Selamat datang"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <!--<View-->
                <!--android:id="@+id/view3"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:layout_marginTop="84dp"-->
                <!--android:layout_marginEnd="260dp"-->
                <!--android:background="@drawable/bg_circle_img_view" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_wallet" />

                    <TextView
                        android:id="@+id/tv_saldo"
                        style="@style/CodeFontBold.BLACK"
                        android:text="-"
                        android:textColor="@color/blakPrimary"
                        android:layout_marginTop="@dimen/component_medium"
                        android:textSize="15sp"
                        tools:layout_editor_absoluteX="67dp"
                        tools:layout_editor_absoluteY="150dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                style="@style/CodeFontSubTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Menu Utama"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slider" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_paud"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_tk" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="PAUD/TK"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_pressed_img"
                            android:clickable="true"
                            android:src="@drawable/ic_sd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="SD"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_smp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="SMP"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_sma" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="SMA"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_kuliah" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="KULIAH"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_umum" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mregular"
                            android:text="UMUM"
                            android:textColor="@color/blakPrimary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_guru_favorite"
                style="@style/CodeFontSubTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Guru Favorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/tv_see_all_promo"
                style="@style/CodeFontHint"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:text="LIHAT SEMUA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


<!--            <HorizontalScrollView-->
<!--                android:id="@+id/horizontalScrollViewGuru"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:scrollbars="none"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintHorizontal_bias="0.0"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/tv_guru_favorite">-->

<!--                <LinearLayout-->
<!--                    android:id="@+id/ll_guru_favorite"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/gridGurus"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:elevation="0dp"
                        android:fadingEdge="none"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/component_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_guru_favorite"/>

<!--                </LinearLayout>-->

<!--            </HorizontalScrollView>-->

            <TextView
                android:id="@+id/tv_guru_artikel"
                style="@style/CodeFontSubTitle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Artikel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridGurus" />

            <TextView
                style="@style/CodeFontHint"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:text="LIHAT SEMUA"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridGurus" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewArtikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                android:paddingLeft="@dimen/activity_horizontal_margin_small"
                android:paddingRight="@dimen/activity_horizontal_margin_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_guru_artikel">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivRound"
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:layout_marginBottom="0.5dp"
                            android:src="@drawable/ic_artikel01"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_pressed"
                            android:clickable="true"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CodeFontHint"
                                android:padding="8dp"
                                android:text="Jenis Tes Lab yang Mengharuskan Puasa Sebelum Cek "
                                 />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/mmedium"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="Info Pendidikan"
                                    android:textColor="@color/bluePrimary"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mlight"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="21 Maret 2019"
                                    android:textColor="@color/grayPrimary"
                                    android:textSize="10sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivRound2"
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_artikel02"
                            android:layout_marginBottom="0.5dp"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_pressed"
                            android:clickable="true"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CodeFontHint"
                                android:padding="8dp"
                                android:text="Jenis Tes Lab yang Mengharuskan Puasa Sebelum Cek "
                               />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/mmedium"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="Info Pendidikan"
                                    android:textColor="@color/bluePrimary"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mlight"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="21 Maret 2019"
                                    android:textColor="@color/grayPrimary"
                                    android:textSize="10sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivRound3"
                            android:layout_width="250dp"
                            android:layout_height="120dp"
                            android:layout_marginBottom="0.5dp"
                            android:src="@drawable/ic_artikel01"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="80dp"
                            android:background="@drawable/bg_pressed"
                            android:clickable="true"
                            android:orientation="vertical">

                            <TextView
                                android:padding="8dp"
                                style="@style/CodeFontHint"
                                android:text="Jenis Tes Lab yang Mengharuskan Puasa Sebelum Cek "
                                 />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/mmedium"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="Info Pendidikan"
                                    android:textColor="@color/bluePrimary"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mlight"
                                    android:paddingLeft="8dp"
                                    android:paddingBottom="8dp"
                                    android:text="21 Maret 2019"
                                    android:textColor="@color/grayPrimary"
                                    android:textSize="10sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <android.support.v4.view.ViewPager
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slider"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_round"
                android:fadingEdge="none"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

            <android.support.design.widget.TabLayout
                android:id="@+id/sliderIndicator"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_marginTop="87dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.14"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/slider"
                app:tabBackground="@drawable/shape_circle_indicator"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>