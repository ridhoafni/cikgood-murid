<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/component_medium"
    android:layout_marginBottom="@dimen/component_medium"
    android:background="@drawable/bg_pressed_center"
    android:padding="16dp">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_btn_gray_primary_oval" />


    <View
        android:layout_marginTop="@dimen/component_extra_big"
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_toRightOf="@id/thumbnail"
        android:background="@color/background" />

</RelativeLayout>